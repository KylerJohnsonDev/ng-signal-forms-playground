{
  "mcpServers": {
    "angular-cli": {
      "command": "npx",
      "args": [
        "-y",
        "@angular/cli",
        "mcp",
        "--experimental-tool"
      ]
    },
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp",
        "--only",
        "auth,firestore"
      ]
    }
  },
  "enabledTools": {
    "angular-cli": [
      "ai_tutor",
      "get_best_practices",
      "search_documentation",
      "list_projects",
      "onpush-zoneless-migration"
    ]
  }
}